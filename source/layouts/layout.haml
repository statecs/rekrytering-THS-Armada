/[if IE 7] <html class="no-js lt-ie9 lt-ie8">
/[if IE 8] <html class="no-js lt-ie9">
%html.no-js
	%head
		%meta{:charset => "utf-8"}
		%meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
		
		-# To set titles and descriptions globally and for each individual page, see /DOCS.md
		%title= page_title
		%meta{:content => "Join THS Armada - the largest student-driven project at KTH! Application closes at midnight the 15th of September (but we strongly recommend you to apply right away).", :name => "description"}
		%meta{:content => "width=device-width, initial-scale=1.0, maximum-scale=1.0", :name => "viewport"}
		%meta{:content => "Recruitment | Armada.nu", :property => "og:title"}/
		%meta{:content => 'images/logo.png', :property => "og:image"}/
		%meta{:content => "Join THS Armada - the largest student-driven project at KTH! Application closes at midnight the 15th of September (but we strongly recommend you to apply right away).", :property => "og:description"}/

		-#Favicon Options:
		-#Update favicon_base.png in /source and middleman-favicon-maker will generate all the versions you need on 'middleman build'
		-#OR, place favicon.ico and apple-touch-icon.png in /source and deactivate :favicon_maker in config.rb
		<link href='http://fonts.googleapis.com/css?family=Roboto+Condensed:400,300,500' rel='stylesheet' type='text/css'>

		= stylesheet_link_tag "site"
		= javascript_include_tag "vendor/modernizr-2.6.1.min"
	%body
		/[if lt IE 7] <p class=chromeframe>Your browser is <em>ancient!</em> <a href="http://browsehappy.com/">Upgrade to a different browser</a> or <a href="http://www.google.com/chromeframe/?redirect=true">install Google Chrome Frame</a> to experience this site.</p>
		%header
		.nav-bar-phone
			.nav-collapse-btn-phone.icon-menu
			.nav-bar-phone-inner
				= page_title
		.nav
			.nav-collapse-btn.icon-arrow-right
			.nav-wrapper
				.nav-inner
					%h4= link_to 'Start', '#top'
					%h4= link_to 'About THS Armada', '#about'
					%h4= link_to 'Join THS Armada', '#thsarmda'
					%h4= link_to 'Marketing, Communications and Internal Systems', '#mks'
					%ul
						%li= link_to 'Photographer (4)', '#photo-hosts'

					%h4= link_to 'Business Relations and Events', '#ne'
					%ul
						%li= link_to 'Event Host (12)', '#event-host'
						%li= link_to 'Service Host (16)', '#service-host'
						%li= link_to 'Lounge Host (12)', '#lounge-host'
						%li= link_to 'Banquet Host (9)', '#banquet-host'
						%li= link_to 'Banquet Host: Entertainment (2)', '#banquet-host-ent'

					%h4= link_to 'Logistics and Career Fair', '#lm'
					%ul
						%li= link_to 'Career Fair Host (159)', '#fair-host'
						%li= link_to 'University Relations Host (8+2)', '#uni-host'
						%li= link_to 'Task force (10+10)', '#task-force'
		.nav-bg

		%div{:role => "main", :class => "main"}= yield
		%footer
		
		= javascript_include_tag "//ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js"
		:javascript
			window.jQuery || document.write('<script src="javascripts/vendor/jquery-1.8.0.min.js"><\/script>')
		= javascript_include_tag "vendor/jquery-ui-1.10.2.custom.min"
		= javascript_include_tag "vendor/enquire.min"
		= javascript_include_tag "vendor/jquery.scrollTo-1.4.3.1-min"
		= javascript_include_tag "vendor/jquery.localscroll-1.2.7-min"
		= javascript_include_tag "vendor/jquery.mousewheel"
		= javascript_include_tag "vendor/zepto.min.js"
		= javascript_include_tag "vendor/retina"
		= javascript_include_tag "site"

		:javascript
			var _gaq=[['_setAccount','UA-39403960-3'],['_trackPageview']];
			(function(d,t){var g=d.createElement(t),s=d.getElementsByTagName(t)[0];
			g.src=('https:'==location.protocol?'//ssl':'//www')+'.google-analytics.com/ga.js';
			s.parentNode.insertBefore(g,s)}(document,'script'));
