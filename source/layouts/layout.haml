%html.no-js
	%head
		%meta{:charset => "utf-8"}
		%meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
		
		-# To set titles and descriptions globally and for each individual page, see /DOCS.md
		%title= page_title
		%meta{:content => "Är du Armadas nästa talang? Sök till gruppledare, utvecklare eller formgivare senast den 11:e april!", :name => "description"}	
		%meta{:content => "width=device-width, initial-scale=1.0, maximum-scale=1.0", :name => "viewport"}
		%meta{:content => "Ansökan till Armada har öppnat! | Armada.nu", :property => "og:title"}/
		%meta{:content => 'images/logo.png', :property => "og:image"}/
		%meta{:content => "Är du Armadas nästa talang? Sök till Armada senast den 11:e april!", :property => "og:description"}/

		-#Favicon Options:
		-#Update favicon_base.png in /source and middleman-favicon-maker will generate all the versions you need on 'middleman build'
